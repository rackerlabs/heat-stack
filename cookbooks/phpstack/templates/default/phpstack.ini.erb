<%- unless @mysql.nil? -%>
<%-   @mysql['phpstack'][node['phpstack']['webserver']]['sites'].each do |port, sites| -%>
<%-     sites.each do |site_name, site_opts| -%>
<%-       if site_opts.include?('db_autocreate') -%>
<%-         next unless site_opts['db_autocreate'] -%>
<%-       end -%>
<%-       site_opts['databases'].each do |database, database_opts| -%>
[MySQL-<%= database -%>]
master-host = <%= @mysql['mysql-multi']['master'] %>
slave-hosts = <%= @mysql['mysql-multi']['slaves'].join(', ') %>
port = <%= @mysql['mysql']['port'] %>
db_name = <%= database %>
username = <%= database_opts['mysql_user'] -%>
password = <%= database_opts['mysql_password'] -%>

<%-       end -%>
<%-     end -%>
<%-   end -%>

<%-   @mysql['phpstack']['mysql']['databases'].each do |database, database_opts| -%>
[MySQL-<%= database -%>]
master-host = <%= @mysql['mysql-multi']['master'] %>
slave-hosts = <%= @mysql['mysql-multi']['slaves'].join(', ') %>
port = <%= @mysql['mysql']['port'] %>
db_name = <%= database %>
username = <%= database_opts['mysql_user'] -%>
password = <%= database_opts['mysql_password'] -%>

<%-   end -%>
<%- end -%>

<%- unless @rabbit.nil? -%>
<%-   @rabbit['phpstack'][node['phpstack']['webserver']]['sites'].each do |port, sites| -%>
<%-     sites.each do |site_name, site_opts| -%>
<%-       rabbit_vhost = "#{site_name}-#{port}" -%>
[RabbitMQ-<%= rabbit_vhost -%>]
host = <%= @rabbit['phpstack']['rabbitmq']['best_ip_for'] %>
port = <%= @rabbit['rabbitmq']['port'] %>
vhost = <%= rabbit_vhost %>
user = <%= rabbit_vhost %>
pass = <%= @rabbit['phpstack']['rabbitmq']['passwords'][rabbit_vhost] %>

<%-     end -%>
<%-   end -%>
<%- end -%>
